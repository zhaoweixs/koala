<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koala.uaa.mapper.AuthorityMapper">

    <select id="findAuthorityByUserId" parameterType="java.lang.Long" resultType="com.koala.uaa.entity.AuthorityInfo">
        select b.id,b.authority from user_authority_info a
        left join authority_info b on a.authority_id = b.id
        where a.user_id = #{userId}
    </select>

</mapper>
